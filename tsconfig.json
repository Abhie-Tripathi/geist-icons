{
    "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "jsx": "react",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "emitDeclarationOnly": true,
      "outDir": "dist/types"
    },
    "include": ["src/**/*", "utils/SvgContainer.js"],
    "exclude": ["node_modules", "dist"],
    "files": ["src/index.ts"]
}